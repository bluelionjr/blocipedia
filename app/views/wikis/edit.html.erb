<h1>Edit Wiki</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter new wiki title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: "form-control", placeholder: "Enter wiki body" %>
      </div>
      <div class="form-group">
        <%= f.label :private, class: "btn btn-primary" do %>
          <%= f.check_box :private, toggle: "buttons" %>  Private
          <% end %>
          <p>Check the private box to make this a secret wiki.</p>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
